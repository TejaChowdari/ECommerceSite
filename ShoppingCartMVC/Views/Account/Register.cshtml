@model ShoppingCartMVC.Models.tblUser


@using (Html.BeginForm())
{
    <div class="container">
        <h2>Register</h2>
        <div class="row">
            <div class="col-lg-4">
                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span>Name:</span>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name" })
                    </div>
                    <div class="form-group">
                        <span>Email:</span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                    </div>
                    <div class="form-group">
                        <span>Password:</span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <div class="form-group">
                        <span>Mobile Number:</span>
                        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", @placeholder = "Mobile Number" })
                    </div>
                    <div class="form-group">
                        <span>Address:</span>
                        @Html.TextBoxFor(m => m.DNo, new { @class = "form-control", @placeholder = "D.No" })
                        @Html.TextBoxFor(m => m.Street, new { @class = "form-control", @placeholder = "Street Name" })
                        @Html.TextBoxFor(m => m.City, new { @class = "form-control", @placeholder = "City Name" })
                        @Html.TextBoxFor(m => m.State, new { @class = "form-control", @placeholder = "State" })
                        @Html.TextBoxFor(m => m.Pincode, new { @class = "form-control", @placeholder = "Pincode" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Register" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>
            </div>
        </div>
    </div>
}
